<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ru.moodle.testgenerator.moodletestgenerator.ui.previewform.QuestionAreaPreviewView?>
<?import java.net.URL?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="ru.moodle.testgenerator.moodletestgenerator.ui.controllers.TestTaskPreviewController"
            fitToWidth="true"
            vbarPolicy="ALWAYS">

    <stylesheets>
        <URL value="@../styles.css"/>
    </stylesheets>

    <VBox spacing="15" style="-fx-padding: 15;">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <Label fx:id="errorLabel"
               wrapText="true"
               style="-fx-text-fill: black; -fx-background-color: red; -fx-padding: 10;"
               visible="false"/>

        <Label text="Вопрос:" style="-fx-font-weight: bold;"/>
        <QuestionAreaPreviewView fx:id="questionView" prefHeight="100" prefWidth="600"/>

        <Label text="Терминальные параметры:" style="-fx-font-weight: bold;"/>
        <VBox fx:id="terminalParamsContainer"
              spacing="8"
              style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: #f9f9f9;"/>

        <Label text="Зависимые параметры:" style="-fx-font-weight: bold;"/>
        <VBox fx:id="dependentParamsContainer"
              spacing="8"
              style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: #f9f9f9;"/>

        <Label text="Ответ:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="answerTextArea"
                  editable="false"
                  wrapText="true"
                  style="-fx-background-color: #f5f5f5;"
                  prefRowCount="4"/>

        <HBox spacing="10">
            <Button text="Вернуться"
                    style="-fx-font-weight: bold;"
                    onAction="#onBackClick"/>
            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Подставить случайные параметры"
                    style="-fx-font-weight: bold;"
                    defaultButton="true"
                    onAction="#onFillRandomClick"/>

            <Button text="Рассчитать вопрос"
                    style="-fx-font-weight: bold;"
                    defaultButton="true"
                    onAction="#onCalculateClick"/>

            <Button text="Продолжить"
                    style="-fx-font-weight: bold;"
                    onAction="#onContinueClick"/>
        </HBox>
    </VBox>
</ScrollPane>