<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns="http://javafx.com/javafx/11.0.1"
			xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="ru.moodle.testgenerator.moodletestgenerator.ui.controllers.QuestionPreviewController"
			fitToWidth="true"
			vbarPolicy="ALWAYS">

	<stylesheets>
		<URL value="@styles.css"/>
	</stylesheets>

	<VBox spacing="15" style="-fx-padding: 15;">
		<padding>
			<Insets top="15" right="15" bottom="15" left="15"/>
		</padding>

		<Label text="Вопрос:" style="-fx-font-weight: bold;"/>
		<TextArea fx:id="questionTextArea"
				  editable="false"
				  wrapText="true"
				  style="-fx-background-color: #f5f5f5;"
				  prefRowCount="4"/>

		<Label text="Терминальные параметры:" style="-fx-font-weight: bold;"/>
		<VBox fx:id="terminalParamsContainer"
			  spacing="8"
			  style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: #f9f9f9;"/>

		<Label text="Зависимые параметры:" style="-fx-font-weight: bold;"/>
		<VBox fx:id="dependentParamsContainer"
			  spacing="8"
			  style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: #f9f9f9;"/>

		<Label text="Ответ:" style="-fx-font-weight: bold;"/>
		<TextArea fx:id="answerTextArea"
				  editable="false"
				  wrapText="true"
				  style="-fx-background-color: #f5f5f5;"
				  prefRowCount="4"/>

		<HBox spacing="10">
			<Button text="Вернуться"
					style="-fx-font-weight: bold;"
					onAction="#onBackClick"/>
			<Region HBox.hgrow="ALWAYS"/>

			<Button text="Подставить случайные параметры"
					style="-fx-font-weight: bold;"
					defaultButton="true"
					onAction="#onFillRandomClick"/>

			<Button text="Рассчитать вопрос"
					style="-fx-font-weight: bold;"
					defaultButton="true"
					onAction="#onCalculateClick"/>

			<Button text="Продолжить"
					style="-fx-font-weight: bold;"
					onAction="#onContinueClick"/>
		</HBox>
	</VBox>

</ScrollPane>